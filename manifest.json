{
  "manifest_version": 3,
  "name": "SpotiAds",
  "short_name": "SpotiAdBlocker",
   "description": "Removes audio ads on Spotifyâ„¢ Web Player",
  "version": "1.1.2",


  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://open.spotify.com/*",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
   "*://open.spotify.com/*"
  ],

  "background": {
    "persistent": true,
    "scripts": ["background.js", "main.js"]
  },
   "icons": 
   {
      "128": "images/icon_2_128.png"
   },
   "browser_action": {
      "default_icon": "images/icon_2_128.png",
      "default_popup": "main.html"
   },
   "content_scripts": 
   [
  	{
  	  "matches": ["https://open.spotify.com/*"],
  	  "js": ["content_script.js"],
  	  "run_at": "document_start"
  	},
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["lib/sweetalert.min.js"],
      "css": ["styles.css"]
    }
   ],
	"web_accessible_resources": [ "injected/*", "lib/*"]
}